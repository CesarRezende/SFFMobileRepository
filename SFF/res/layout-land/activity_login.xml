<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    >

    <GridLayout
        android:layout_width="270sp"
        android:layout_height="250sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/login_background"
        android:columnCount="1"
        android:padding="10sp" >

        <TextView
            android:id="@+id/login_label"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="@string/login_label"
            android:textColor="#cf0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/first_separator"
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="5sp"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login_user_label"
            android:layout_width="match_parent"
            android:text="@string/login_user_label"
            android:textColor="#cf0000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_user_field"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginTop="5sp"
            android:background="@drawable/login_field_border"
            android:ems="10"
            android:paddingTop="3sp"
            android:paddingBottom="3sp" 
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            />

        <TextView
            android:id="@+id/login_password_label"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:text="@string/login_password_label"
            android:textColor="#cf0000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_password_field"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginTop="5sp"
            android:password="true"
            android:background="@drawable/login_field_border"
            android:ems="10"
            android:paddingTop="3sp"
            android:paddingBottom="3sp" 
            android:paddingLeft="10sp"
            android:paddingRight="10sp" />

        <requestFocus android:layout_row="7" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/login_button_background"
            android:layout_height="35sp"
            android:layout_column="0"
            android:layout_marginTop="10sp"
            android:layout_gravity="left|top"
            android:layout_row="6"
            android:text="@string/login_label" />



    </GridLayout>

</RelativeLayout>