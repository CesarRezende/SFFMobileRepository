<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="br.com.cesar.android.sff.SettingsActivity" 
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/webservice_address" />

    <EditText
        android:id="@+id/webservice_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_webservice_address" />

    <EditText
        android:id="@+id/local_webservice_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri" />

</LinearLayout>